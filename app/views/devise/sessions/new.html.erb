<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Por favor ingrese</h2>
  <%= f.label :email, :for => "inputEmail", :class => "sr-only" %>
  <%= f.email_field :email, :id => "inputEmail", :placeholder => "Email", :class => "form-control", required: true, autofocus: true %>
  
  <%= f.label :password, :for => "inputPassword", :class => "sr-only" %>
  <%= f.password_field :password, :class => "form-control", :placeholder => "Clave", autocomplete: "off",required: true %>  

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> Recordarme
      </label>
    </div>
  <% end -%>

  <%= f.submit "Ingresar", :class => "btn btn-lg btn-primary btn-block" %>

  <br/>

  <%= render "devise/shared/links" %>  
<% end %>


