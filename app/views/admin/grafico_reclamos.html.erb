<div class="page-header">
  <h4>Reclamos</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "bullhorn", text: "Reclamos" %>
  </li>
</ol>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><%= fa_icon "pie-chart", text: "Reclamos por tipo" %></h3>
			</div>
			<div class="panel-body">
				<%= pie_chart @reclamos_por_tipo %>
				<div class="text-right">
					<%= link_to admin_path do %>
    					<%= fa_icon "arrow-circle-right", text: "Ver Detalles" %>
  					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>